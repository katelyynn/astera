generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model user {
  id         String   @id @default(cuid())
  username   String
  email      String   @unique
  password   String
  about      String?
  joined     DateTime @default(now())

  activities activity[]
  listens    listen[]
}

model activity {
  id         String   @id @default(cuid())
  user_id    String
  user       user     @relation(fields: [user_id], references: [id])
  involved   String[]
  context    Json?
  type       String
  created    DateTime @default(now())
}

model artist {
  id         String   @id @default(cuid())
  name       String
  spotify_id String?  @unique
  apple_id   String?  @unique
  mb_id      String?  @unique
  canonical  Boolean  @default(true)

  albums     artist_album[]
  tracks     artist_track[]
}

model album {
  id         String   @id @default(cuid())
  name       String
  spotify_id String?  @unique
  apple_id   String?  @unique
  mb_id      String?  @unique
  canonical  Boolean  @default(true)
  released   DateTime?

  artists    artist_album[]
  tracks     album_track[]

  listens    listen[]
}

model track {
  id         String   @id @default(cuid())
  name       String
  spotify_id String?  @unique
  apple_id   String?  @unique
  mb_id      String?  @unique
  canonical  Boolean  @default(true)
  released   DateTime?
  duration   Int?

  artists    artist_track[]
  albums     album_track[]

  listens    listen[]
}

model artist_track {
  artist_id String
  track_id  String

  artist    artist @relation(fields: [artist_id], references: [id])
  track     track  @relation(fields: [track_id], references: [id])

  @@id([artist_id, track_id])
}

model artist_album {
  artist_id String
  album_id  String

  artist    artist @relation(fields: [artist_id], references: [id])
  album     album  @relation(fields: [album_id], references: [id])

  @@id([artist_id, album_id])
}

model album_track {
  album_id String
  track_id String

  album    album @relation(fields: [album_id], references: [id])
  track    track @relation(fields: [track_id], references: [id])

  @@id([album_id, track_id])
}

model listen {
  id               String   @id @default(cuid())
  user_id          String
  user             user     @relation(fields: [user_id], references: [id])
  track_id         String
  track            track    @relation(fields: [track_id], references: [id])
  album_id         String
  album            album    @relation(fields: [album_id], references: [id])

  raw_track        String?
  raw_artist       String?
  raw_album        String?
  raw_album_artist String?

  listened         DateTime
  created          DateTime @default(now())

  provisional      Boolean  @default(true)
}
